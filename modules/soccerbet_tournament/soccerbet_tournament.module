<?php

/**
 * @file
 * Provides a soccerbet tournament entity type.
 */

use Drupal\Core\Render\Element;

/**
 * Implements hook_theme().
 */
function soccerbet_tournament_theme() {
  return [
    'soccerbet_tournament' => [
      'render element' => 'elements',
    ],
  ];
}

/**
 * Prepares variables for soccerbet tournament templates.
 *
 * Default template: soccerbet-tournament.html.twig.
 *
 * @param array $variables
 *   An associative array containing:
 *   - elements: An associative array containing the soccerbet tournament information and any
 *     fields attached to the entity.
 *   - attributes: HTML attributes for the containing element.
 */
function template_preprocess_soccerbet_tournament(array &$variables) {
  foreach (Element::children($variables['elements']) as $key) {
    $variables['content'][$key] = $variables['elements'][$key];
  }
}
